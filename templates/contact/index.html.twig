{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}
{% include 'header.html.twig' %}
{% include 'flash.html.twig' %}
<main class="container">
    <div class="row">
        <h1 class="text-center mt-5 mb-5">Nous contacter</h1>
        <div>
            {{ form_start(form) }}
                <section class="text-danger">{{ form_errors(form) }}</section>
                <section class="form-group">
                    <div class="text-danger">{{ form_errors(form.prenom) }}</div>
                    {{ form_label(form.prenom) }}
                    <div>{{ form_widget(form.prenom, { 'attr': {'class': 'form-control'} }) }}</div>
                    <small class="form-text text-muted">{{ form_help(form.prenom) }}</small>
                </section>
                <section class="form-group">
                    <div class="text-danger">{{ form_errors(form.nom) }}</div>
                    {{ form_label(form.nom) }}
                    <div>{{ form_widget(form.nom, { 'attr': {'class': 'form-control'} }) }}</div>
                    <small class="form-text text-muted">{{ form_help(form.nom) }}</small>
                </section>
                <section class="form-group">
                    <div class="text-danger">{{ form_errors(form.email) }}</div>
                    {{ form_label(form.email) }}
                    <div>{{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}</div>
                    <small class="form-text text-muted">{{ form_help(form.email) }}</small>
                </section>
                <section class="form-group">
                    <div class="text-danger">{{ form_errors(form.sujet) }}</div>
                    {{ form_label(form.sujet) }}
                    <div>{{ form_widget(form.sujet, { 'attr': {'class': 'form-control'} }) }}</div>
                    <small class="form-text text-muted">{{ form_help(form.sujet) }}</small>
                </section>
                <section class="form-group">
                    <div class="text-danger">{{ form_errors(form.content) }}</div>
                    {{ form_label(form.content) }}
                    <div>{{ form_widget(form.content, { 'attr': {'class': 'form-control'} }) }}</div>
                    <small class="form-text text-muted">{{ form_help(form.content) }}</small>
                </section>
                <button name="contact" type="submit" class="btn btn-primary mt-3">Envoyer</button>
            {{ form_end(form) }}
        </div>
        <div class="d-flex mt-5 mb-5 justify-content-between">
            <div class="my-auto">
                <h2>Coordonées</h2>
                <ul class="list-unstyled">
                    <li>Téléphone : 06 00 00 00 00</li>
                    <li>Adresse : 0 rue exemple</li>
                    <li>Paris 73000</li>
                </ul>
            </div>
            <div>
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d83998.95410693537!2d2.276995247082096!3d48.85883363930798!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sfr!2sfr!4v1649393610931!5m2!1sfr!2sfr" width="600" height="400" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>

</main>
{% include 'footer.html.twig' %}
{% endblock %}
